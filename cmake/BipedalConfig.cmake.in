
if(BIPEDAL_FOUND)
    return()
endif()
set(BIPEDAL_FOUND TRUE)

find_package(Simox REQUIRED)
find_package(MMMCore REQUIRED)

get_filename_component(CURRENT_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(BIPEDAL_GLOBAL_CMAKE_DIR "@CMAKE_INSTALL_PREFIX@/@BIPEDAL_CMAKE_DIR@")
if (${CURRENT_DIR} STREQUAL ${BIPEDAL_GLOBAL_CMAKE_DIR})
    set(BIPEDAL_HEADERS "@CMAKE_INSTALL_PREFIX@/@BIPEDAL_HEADER_DIR@")
    SET(BIPEDAL_LIB "@CMAKE_INSTALL_PREFIX@/lib/libbipedal.so")
else ()
    set(BIPEDAL_HEADERS "${CURRENT_DIR}/..")
    SET(BIPEDAL_LIB "${CURRENT_DIR}/libbipedal.so")
endif()

set(BIPEDAL_INCLUDE_DIRS ${BIPEDAL_HEADERS} ${MMMCORE_INCLUDE_DIRS} ${Simox_EXTERNAL_INCLUDE_DIRS} ${Simox_INCLUDE_DIRS} ${EIGEN_INCLUDE_DIRS})
Set(BIPEDAL_EXTERNAL_LIBRARIES ${MMMCORE_LIBRARIES} ${Simox_EXTERNAL_LIBRARIES} ${Simox_LIBRARIES})
Set(BIPEDAL_LIBRARIES ${BIPEDAL_LIB} ${MMMCORE_LIBRARIES} ${Simox_EXTERNAL_LIBRARIES} ${Simox_LIBRARIES})

message (STATUS "Bipedal include dirs: ${BIPEDAL_INCLUDE_DIRS}")
message (STATUS "Bipedal libraries: ${BIPEDAL_LIBRARIES}")

set(BIPEDAL_MAJOR_VERSION 0)
set(BIPEDAL_MINOR_VERSION 1)
set(BIPEDAL_PATCH_VERSION 0)
set(BIPEDAL_VERSION ${BIPEDAL_MAJOR_VERSION}.${BIPEDAL_MINOR_VERSION}.${BIPEDAL_PATCH_VERSION})

